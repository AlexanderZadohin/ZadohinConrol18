<Page x:Class="ZadohinConrol18.PageMain.ReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZadohinConrol18.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="634"
      Title="ReportPage">

    <Grid>
        <StackPanel Orientation="Vertical"
                    Margin="50"
                    Width="500">
            <StackPanel Orientation="Horizontal"
                        >
                <TextBlock Text="Выберите специальность" Width="160"/>
                <ComboBox Name="SpecialCmb" Width="200" Height="25"/>
                <Button x:Name="Search" Click="Search_Click" Width="70"/>
            </StackPanel>
            <StackPanel Margin="25">
                <DataGrid AutoGenerateColumns="False"
                      Name="DataGridInfo"
                      Height="500"
                      Width="450"
                      VerticalAlignment="Top"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Header="Группа"
                            Binding="{Binding Name}"
                            Width="200"/>
                        
                        <DataGridTemplateColumn Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Баллы" Name="SpisocBtn" Click="SpisocBtn_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
