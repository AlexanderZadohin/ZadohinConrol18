<Page x:Class="ZadohinConrol18.PageMain.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZadohinConrol18.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="419" d:DesignWidth="158"
      Title="MenuPage">

    <Grid>
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 100" Width="150">
                <Button x:Name="AddGroupBtn" Width="125" Height="35" Margin="10 10 10 10" FontSize="10" Content="Добавить группу" Click="AddGroupBtn_Click"/>
                <Button x:Name="AddActivityBtn" Width="125" Height="35" Margin="10 10 10 10" FontSize="10" Content="Добавить меропритияе" Click="AddActivityBtn_Click"/>
                <Button x:Name="AccountingBtn" Width="125" Height="35" Margin="10 10 10 10" FontSize="10" Content="Отчет по студентам" Click="AccountingBtn_Click"/>
                <Button x:Name="AddAccountingBtn" Width="125" Height="35" Margin="10 10 10 10" FontSize="10" Content="Учет" Click="AddAccountingBtn_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
